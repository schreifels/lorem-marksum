#!/usr/bin/env node

'use strict';

const program = require('commander');
const loremMarksum = require('../src/index');
const defaults = require('../src/defaults');

program
  .version('HEAD')
  .option('-m, --min-elements <i>', `Specify minimum number of elements, defaults to ${defaults.minElements.describe}`, parseInt)
  .option('-x, --max-elements <i>', `Specify maximum number of elements, defaults to ${defaults.maxElements.describe}`, parseInt)
  .parse(process.argv);

const output = loremMarksum({
  minElements: program.minElements,
  maxElements: program.maxElements
});

console.log(output);
