#!/usr/bin/env node

'use strict';

const program = require('commander');
const loremMarksum = require('../src/index');

program
  .version('HEAD')
  .option('-m, --min-elements <i>', 'Specify minimum number of elements, defaults to 10', parseInt)
  .option('-x, --max-elements <i>', 'Specify maximum number of elements, defaults to 2x min elements', parseInt)
  .parse(process.argv);

const output = loremMarksum({
  minElements: program.minElements,
  maxElements: program.maxElements
});

console.log(output);
